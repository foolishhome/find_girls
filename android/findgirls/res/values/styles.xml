<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>       <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 设置dialog的背景 -->
        <item name="android:windowNoTitle">true</item>      <!-- 是否显示title -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>  <!-- 也是个drawable，定义contentoverlay的背景 -->
        <item name="android:backgroundDimEnabled">false</item>  <!-- 背景是否模糊显示 -->
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialogFragmentStyleOver11" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="ChannelRoleRadioButton">
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_channel_role_button_text</item>
        <item name="android:background">@drawable/selector_channel_role_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ChatPanelSendButton">
        <item name="android:layout_width">@dimen/chat_panel_send_button_width</item>
        <item name="android:layout_height">@dimen/chat_panel_input_height</item>
        <item name="android:textColor">@color/tab_select_text</item>
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/btn_send</item>
    </style>

    <style name="PopupMenuPane">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="GiftPopupAnimation">
        <item name="@android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
    <style name="LiveListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_live_list</item>
        <item name="android:textColor">#FFA8A8A8</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="LandScapePopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/landscape_right_2_center</item>
        <item name="android:windowExitAnimation">@anim/landscape_center_2_right</item>
    </style>
    <style name="FollowButton">
        <item name="android:button">@drawable/selector_follow_button</item>
        <item name="android:background">@null</item>
    </style>
    <style name="BillButton">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:button">@drawable/selector_bill_button</item>
        <item name="android:background">@null</item>
    </style>
</resources>