<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
          android:id="@+id/root"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          android:background="@color/white">

        <RelativeLayout
                android:id="@+id/rl_portrait"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/rl_bottom"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <RelativeLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_above="@+id/tv_login">

                <ImageView android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:src="@drawable/user"
                    android:id="@+id/iv_user"
                    android:scaleType="center"/>

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="70dp"
                    android:paddingLeft="28dp"
                    android:fontFamily="Microsoft Yahei"
                    android:hint="@string/account"
                    android:background="@drawable/bg_login_edit"
                />
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/et_account"
                    android:orientation="horizontal">
                    <ImageView android:id="@+id/iv_account_drop"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="center"
                        android:src="@drawable/arrow_down"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E7E9"
                    android:layout_below="@id/et_account"/>

                <ImageView android:layout_width="28dp"
                    android:layout_height="32dp"
                    android:src="@drawable/password"
                    android:id="@+id/iv_password"
                    android:scaleType="center"
                    android:layout_below="@id/et_account"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/et_password"
                    android:layout_below="@id/et_account"
                    android:layout_width="match_parent"
                    android:paddingRight="70dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="28dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="Microsoft Yahei"
                    android:hint="@string/password"
                    android:imeOptions="actionGo"
                    android:password="true"
                    android:background="@drawable/bg_login_edit"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E7E9"
                    android:layout_below="@id/et_password"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_below="@+id/et_password"
                    android:gravity="center_vertical"
                    android:id="@+id/layout_identify_code"
                    android:visibility="gone">

                    <ImageView android:layout_width="28dp"
                        android:layout_height="32dp"
                        android:src="@drawable/password"
                        android:id="@+id/ivt_image"
                        android:scaleType="center"/>

                    <EditText
                        android:id="@+id/et_identify_code"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:hint="@string/str_picture_code"
                        android:imeOptions="actionGo"
                        android:background="@drawable/bg_login_edit"/>

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:minWidth="40dp"
                        android:minHeight="40dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/img_identify_code"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_img_again"
                        android:text="@string/str_img_again"
                        android:fontFamily="Microsoft Yahei"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/hyper_link_blue"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4E7E9"
                    android:layout_below="@id/layout_identify_code"/>

            </RelativeLayout>

            <Button
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="@string/login"
                android:fontFamily="Microsoft Yahei"
                android:layout_above="@+id/login_link"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff" />

            <RelativeLayout
                    android:id="@+id/login_link"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    >
                    <TextView
                            android:id="@+id/tv_forgot_pwd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="@dimen/login_register_padding"
                            android:textColor="#1EE3B1"
                            android:text="@string/forgot_pwd"
                            android:fontFamily="Microsoft Yahei"
                            />
                    <TextView
                            android:id="@+id/tv_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/login_register_padding"
                            android:textSize="16sp"
                            android:textColor="#1EE3B1"
                            android:layout_marginLeft="60dp"
                            android:text="@string/register"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
