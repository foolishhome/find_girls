<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/list_header_grey"
              android:layout_width="match_parent"
              android:padding="5dp"
              android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_expand" android:layout_width="wrap_content" android:layout_height="30dp"
               android:paddingLeft="5dp" android:paddingRight="8dp"
               android:scaleType="center"/>
    <TextView android:id="@+id/tv_group_name" android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_gravity="center"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tv_online_count" android:layout_width="wrap_content"
              android:paddingRight="5dp"
              android:textColor="@color/text_grey"
              android:layout_gravity="center"
              android:layout_height="wrap_content"/>
</LinearLayout>