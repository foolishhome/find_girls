<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

    <RelativeLayout
            android:id="@+id/rl_gift_amount_input_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:visibility="gone">

        <RelativeLayout
                android:id="@+id/gift_amount_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_conversation_input"
                android:baselineAligned="false"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:orientation="horizontal"
                android:padding="0dp">

            <ImageView
                    android:id="@+id/SmileButton2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/conv_smiley"
                    android:gravity="center"
                    android:visibility="gone"/>

            <EditText
                    android:id="@+id/et_gift_amount_edit"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_toLeftOf="@+id/btn_ensure_amount"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="3dp"
                    android:background="@drawable/bg_input2"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:hint="@string/str_input_gift_amount_hint"
                    android:textColorHint="#c8c8c8"
                    android:maxLength="4"/>

            <Button
                    android:id="@+id/btn_ensure_amount"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/btn_confirm"
                    android:textSize="16sp"
                    android:visibility="visible"/>
        </RelativeLayout>

        <View
                android:id="@+id/view_dismiss_gift_amount_input"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/gift_amount_input"
                android:layout_alignParentTop="true"
                android:background="@color/transparent"/>
    </RelativeLayout>

</RelativeLayout>