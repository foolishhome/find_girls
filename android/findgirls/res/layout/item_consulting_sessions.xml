<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLinearLayout"
    android:isScrollContainer="false"
    android:paddingLeft="12dp"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/def_portrait_online"
            android:layout_marginTop="7dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">


            <com.yy.a.widget.richtext.ConversationTextView
                android:id="@+id/doctorNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="@dimen/med_font_size"
                android:singleLine="true"
                android:text="医生名字" />


            <com.yy.a.widget.richtext.ConversationTextView
                android:id="@+id/doctorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textSize="@dimen/med_font_size"
                android:text="我：123465456351534" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有新回复"
                    android:id="@+id/hasNewText"
                    android:background="#ffffffff"
                    android:textColor="#ff55ffc8"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="时间"
                    android:id="@+id/lastAnswerTimeTxt"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/consult_word_color" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>