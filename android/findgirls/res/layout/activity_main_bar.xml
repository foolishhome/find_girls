<?xml version="1.0" encoding="utf-8"?>
<com.yy.a.widget.ImeAwareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ime_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true">
    <com.yy.a.widget.PagerSlidingTabStrip
        android:id="@+id/tabs_page"
        android:layout_below="@id/fragment_channel_media"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:pstsIndicatorColor="@color/tab_select_text"
        app:pstsShouldExpand="true"
        android:background="@drawable/page_tab_bg"
        app:pstsTabBackground="@drawable/selectable_item"
        app:pstsTabPaddingLeftRight="14dip"
        app:pstsUnderlineHeight="1dp"
        app:pstsIndicatorHeight="4dp"
        app:pstsDividerColor="@color/tranparent"
        app:pstsUnderlineColor="@color/tab_buttom_line"
        />

    <com.yy.a.widget.SwipeControllableViewPager
        android:id="@+id/vp_function"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tabs_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.yy.a.widget.ImeAwareRelativeLayout>