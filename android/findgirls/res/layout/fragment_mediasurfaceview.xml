<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <com.duowan.media.YYMediaGLSurfaceView
        android:id="@+id/MGL_surfaceview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />
    <com.duowan.media.YYMediaGLSurfaceView
        android:id="@+id/MGL_surfaceview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_mic_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_mic_card_default"
        android:contentDescription="@string/content_desc"
        />
    <TextView
        android:id="@+id/tv_no_live_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="@string/no_live_tips"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/pb_video_loading"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        />
</RelativeLayout>