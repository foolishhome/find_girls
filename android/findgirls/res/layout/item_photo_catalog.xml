<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/grid_1"
    android:paddingRight="@dimen/grid_2"
    android:paddingTop="@dimen/grid_1">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_catalog_photo"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_selected"
        android:layout_toRightOf="@+id/iv_photo"
        android:orientation="vertical"
        android:padding="@dimen/grid_4">

        <TextView
            android:id="@+id/tv_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_2"
            android:singleLine="true"
            android:textSize="@dimen/big_fnt" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_2" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/photo_selected"
        android:visibility="visible" />
</RelativeLayout>