<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selectable_item_white_bg"
        android:padding="8dp"
        >

    <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            />

    <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_thumb"
            android:layout_alignTop="@id/iv_thumb"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/live_title_text"
            android:textSize="15sp"
            />
    <LinearLayout android:layout_width="match_parent" android:layout_alignLeft="@id/tv_title"
                  android:orientation="horizontal"
                  android:layout_below="@id/tv_title" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_author"
                android:drawableLeft="@drawable/icon_id_grey"
                android:layout_width="0dp"
                android:drawablePadding="2dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                />

        <TextView
                android:id="@+id/tv_time"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                />


        <TextView
                android:id="@+id/tv_user_count"
                android:drawablePadding="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:drawableLeft="@drawable/channel_online"
                android:textColor="@color/text_grey"
                android:textSize="12sp"
                />
    </LinearLayout>
</RelativeLayout>