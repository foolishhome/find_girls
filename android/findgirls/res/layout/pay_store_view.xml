<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/pay_type"
                android:textSize="@dimen/pay_store_view_text_size"
                android:textColor="@color/pay_text_title"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        <com.yy.medical.widget.ExpandableHeightGridView android:id="@+id/gv_pay_type"
                                                            android:layout_marginTop="10dp"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:numColumns="2"
                                                            android:layout_marginLeft="20dp"
                                                            android:layout_marginRight="20dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="支付金额"
                android:textSize="@dimen/pay_store_view_text_size"
                android:textColor="@color/pay_text_title"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

        <com.yy.medical.widget.ExpandableHeightGridView android:id="@+id/gv_pay_amount"
                                                            android:layout_marginTop="10dp"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:numColumns="3"
                                                            android:horizontalSpacing="12dp"
                                                            android:verticalSpacing="12dp"
                                                            android:layout_marginLeft="20dp"
                                                            android:layout_marginRight="20dp"
                />

        <EditText
                android:id="@+id/et_pay_input_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/selector_pay_item_background_normal"
                android:hint="@string/pay_input_tip"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:textColorHint="#c7c7c7"
                android:textColor="@color/pay_text_nomal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

        <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/pay_balance_tip"
                android:textSize="@dimen/pay_store_view_text_size"/>

        <Button
                android:id="@+id/btn_charge_quickly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/pay_charge_quick"
                android:textSize="@dimen/pay_store_view_text_size"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
    </LinearLayout>
</ScrollView>