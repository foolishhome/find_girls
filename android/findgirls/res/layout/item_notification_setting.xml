<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:layout_height="match_parent">

    <View
            android:id="@+id/top_line"
            android:layout_height="@dimen/setting_line_height"
            android:layout_width="match_parent"
            android:background="@color/line_color"
            />

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:textSize="@dimen/med_font_size"
            />

    <ImageView
            android:id="@+id/iv_sel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/check_sel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/small_margin_right"
            />

    <View
            android:id="@+id/bottom_line"
            android:layout_height="@dimen/setting_line_height"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color"
            />
</RelativeLayout>