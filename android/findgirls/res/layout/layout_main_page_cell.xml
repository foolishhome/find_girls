<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/selectable_item_white_bg"
        android:padding="4dp"
        android:layout_height="wrap_content" android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <com.yy.a.widget.HeightMatchWidthImageView
            android:id="@+id/iv_thumb"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent"/>
    <TextView
            android:id="@+id/tv_user_count"
            android:layout_alignBottom="@id/iv_thumb"
            android:paddingLeft="4dp"
            android:drawableLeft="@drawable/channel_online_white"
            android:singleLine="true"
            android:background="@color/channel_actionbar_bg"
            android:textColor="@color/white"
            android:ellipsize="none"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_below="@id/iv_thumb"
            android:singleLine="true"
            android:textColor="@color/text_grey"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

</RelativeLayout>