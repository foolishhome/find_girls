<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/message_tab_item_height"
        android:paddingLeft="@dimen/portrait_margin_left"
        android:paddingRight="@dimen/portrait_margin_left"
        android:paddingBottom="@dimen/portrait_margin_top"
        android:paddingTop="@dimen/portrait_margin_top"
        android:background="@drawable/selectable_item_white_bg"
        >

    <ImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/normal_photo_width"
            android:layout_height="@dimen/normal_photo_height"
            />
    <com.yy.a.widget.MessageCountTextView
            android:id="@+id/tv_msg_count"
            android:layout_width="@dimen/msg_width"
            android:layout_height="@dimen/msg_height"
            android:minHeight="@dimen/msg_min_height"
            android:minWidth="@dimen/msg_min_width"
            android:gravity="center"
            android:textSize="@dimen/tiny_font_size"
            android:singleLine="true"
            android:clickable="false"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/msg_margin_right"
            android:layout_marginTop="@dimen/msg_margin_top"
            android:background="@drawable/bg_msg_count_notice"
            android:visibility="gone"
            />
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/portrait"
                    android:layout_centerVertical="true">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/msg_title_margin_left"
                android:layout_marginRight="25dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/med_font_size"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:layout_alignBottom="@id/tv_title"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/tiny_font_size"
                />
        <TextView
                android:id="@+id/tv_sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="@dimen/msg_subtitle_margin_top"
                android:layout_alignLeft="@id/tv_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/tiny_font_size"
                android:textColor="@color/gray"
                />
        <ImageView
                android:id="@+id/iv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_title"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />
    </RelativeLayout>
</RelativeLayout>