<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/gift_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/layout_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:scaleType="centerInside" >
        </ImageView>

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/from_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="8"
                android:singleLine="true"
                android:shadowColor="@color/white"
		        android:shadowDx="1"
		        android:shadowDy="1"
		        android:shadowRadius="0.6"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/clear"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:shadowColor="@color/white"
		        android:shadowDx="1"
		        android:shadowDy="1"
		        android:shadowRadius="0.6"
                android:text="é€"
                android:textColor="@color/text_shadow_gray"
                android:textSize="16sp" >
            </TextView>

            <ImageView
                android:id="@+id/gift_image"
                android:layout_width="@dimen/channel_gift_size"
                android:layout_height="@dimen/channel_gift_size"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:src="@drawable/icon_diamond" >
            </ImageView>

            <TextView
                android:id="@+id/gift_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/clear"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:shadowColor="@color/white"
		        android:shadowDx="1"
		        android:shadowDy="1"
		        android:shadowRadius="0.6"
                android:text=""
                android:textColor="@color/color_channel_on"
                android:textSize="16sp" >
            </TextView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/gift_layout"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/kn_gift_01"
            android:visibility="invisible" >
        </ImageView>

        <ImageView
            android:id="@+id/flash_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/placeholder"
            android:background="@color/clear"
            android:paddingTop="12dp"
            android:src="@drawable/kn_flash"
            android:visibility="invisible" >
        </ImageView>
    </RelativeLayout>

</RelativeLayout>