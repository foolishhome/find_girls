<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_gotologin"
            android:layout_width="match_parent"
            android:paddingLeft="32dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_exit"
            android:drawablePadding="7dp"
            android:background="@drawable/selectable_item_white_bg"
            android:layout_height="58dp"
            android:textSize="@dimen/med_font_size"
            android:text="@string/str_exit_app"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" />
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/line_color"-->
                <!--android:layout_marginTop="12dp"/>-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/clear">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/rl_header_container"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/iv_portrait"
                        android:layout_alignParentLeft="true"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="19dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/def_portrait_online" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="点击登陆"
                        android:id="@+id/tv_title"
                        android:textColor="#ff000000"
                        android:singleLine="true"
                        android:layout_below="@+id/iv_portrait" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text=""
                        android:id="@+id/tv_signature"
                        android:textColor="#ffbebebe"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="8dp"
                        android:singleLine="true" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"
                android:layout_marginTop="22dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_item_white_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectable_item_white_bg"
                    android:id="@+id/rl_account_container"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="我的心情"
                        android:id="@+id/tv_account"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/med_font_size"
                        android:drawableLeft="@drawable/icon_money"
                        android:paddingLeft="20dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/arrow_right"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="312dp"
                    android:layout_height="1px"
                    android:visibility="visible"
                    android:background="@color/line_color"
                    android:layout_marginLeft="70dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectable_item_white_bg"
                    android:id="@+id/rl_mydocotor"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="我关注的好友"
                        android:gravity="center_vertical"
                        android:textColor="#ff000000"
                        android:id="@+id/tv_mydoctor"
                        android:textSize="@dimen/med_font_size"
                        android:drawableLeft="@drawable/icon_my_follow_doctor"
                        android:paddingLeft="20dp"
                        android:drawablePadding="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="312dp"
                    android:layout_height="1px"
                    android:visibility="visible"
                    android:background="@color/line_color"
                    android:layout_marginLeft="70dp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectable_item_white_bg"
                    android:id="@+id/rl_suggestion"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="意见反馈"
                        android:gravity="center_vertical"
                        android:textColor="#ff000000"
                        android:id="@+id/tv_feedback"
                        android:textSize="@dimen/med_font_size"
                        android:drawableLeft="@drawable/icon_feedback"
                        android:paddingLeft="20dp"
                        android:drawablePadding="10dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/arrow_right" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                android:layout_marginTop="22dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_setting_container"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="#ffffffff">

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="match_parent"
                    android:background="@drawable/selectable_item_white_bg"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:drawablePadding="7dp"
                    android:drawableLeft="@drawable/icon_setting"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/med_font_size"
                    android:text="@string/setting" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/arrow_right"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"
                android:layout_marginTop="22dp"/>
            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_exit"
                android:drawablePadding="7dp"
                android:background="@drawable/selectable_item_white_bg"
                android:layout_height="58dp"
                android:textSize="@dimen/med_font_size"
                android:text="@string/str_exit_account"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
