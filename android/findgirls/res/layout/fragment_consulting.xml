<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/selectable_item_white_bg"
        android:id="@+id/relativeLayoutInCosult"
        android:layout_above="@+id/hisoryMoreLayout"
        android:layout_alignParentStart="false">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:scaleType="centerCrop"
            android:src="@drawable/live_back_img" />

        <Button
            android:id="@+id/quickAskButton"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:text = "@string/consulting_quick_ask"
            android:textColor="#ffffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="56dp"
            android:layout_alignBottom="@+id/imageView"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hisoryMoreLayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/selectable_item_white_bg"
        android:layout_above="@+id/historyLinearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consulting_ask_history"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:textSize="@dimen/med_font_size"
            android:fontFamily="Microsoft Yahei"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2not read"
            android:id="@+id/unreadTextView"
            android:textColor="#ff00dda7"
            android:layout_alignTop="@+id/textView"
            android:layout_toLeftOf="@+id/iv_toConsultingHistory"
            android:paddingRight="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_toConsultingHistory"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/unreadTextView"
            android:paddingRight="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/tab_buttom_line"
            android:id="@+id/view"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/historyLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_item_white_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp">
    </LinearLayout>

</RelativeLayout>
