<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_buttom_line"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_tongbi"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择支付金额"
                android:id="@+id/textView"
                android:paddingLeft="45dp"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6元"
                    android:id="@+id/button0"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18元"
                    android:id="@+id/button1"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30元"
                    android:id="@+id/button2"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:paddingTop="100dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108元"
                    android:id="@+id/button3"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="308元"
                    android:id="@+id/button4"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="518元"
                    android:id="@+id/button5"
                    android:width="86dp"
                    android:height="46dp"
                    android:background="@drawable/btn_pay_bg"
                    android:shadowColor="#ff000000"
                    android:textColor="#ff000000" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/selectable_item_white_bg"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/tab_buttom_line"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/med_font_size"
                        android:textColor="@color/black"
                        android:text="@string/pay_tongB"
                        android:layout_centerVertical="true"
                        android:id="@+id/tongbiPay"
                        android:layout_alignParentEnd="false"
                        android:layout_alignParentRight="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/med_font_size"
                        android:textColor="#ff1ee1b1"
                        android:text="0"
                        android:id="@+id/tongbiPayText"
                        android:layout_alignTop="@+id/tongbiPay"
                        android:layout_toRightOf="@+id/tongbiPay" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#ffffffff">
            <View
                android:id="@+id/bottom_line1"
                android:layout_height="@dimen/setting_line_height"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:id="@+id/rl_pay_alipay"
                android:layout_width="fill_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/str_pay_alipay"
                    android:textColor="#ff000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_pay_alipay"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/check_sel"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <View
                android:layout_height="@dimen/setting_line_height"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color"
                />

            <RelativeLayout
                android:id="@+id/rl_pay_bank"
                android:layout_width="fill_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/str_pay_bank"
                    android:textColor="#ff000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_pay_bank"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="false"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/check_sel"
                    android:visibility="gone"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_height="@dimen/setting_line_height"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:paddingLeft="45dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/MoneyPayButton"
                    android:layout_width="260dp"
                    android:layout_height="42dp"
                    android:text = "立即充值"
                    android:textColor="#ffffffff" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>