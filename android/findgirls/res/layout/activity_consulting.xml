<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_buttom_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selectable_item_white_bg">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"
                android:id="@+id/view" />

            <RadioGroup
                android:id="@+id/generRadiogroup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/selector_sex_checkbox"
                    android:text="@string/male"
                    android:id="@+id/buttonMale"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:paddingLeft="0dp"
                    android:drawablePadding="8dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/selector_sex_checkbox"
                    android:text="@string/female"
                    android:id="@+id/buttonFemale"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:paddingLeft="0dp"
                    android:drawablePadding="8dp"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consulting_age_set"
                android:id="@+id/textView"
                android:fontFamily="Microsoft Yahei"
                android:layout_toLeftOf="@+id/myAgeEdit"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/myAgeEdit"
                android:text="18"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:digits="1234567890"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:layout_below="@+id/view"
                android:fontFamily="Microsoft Yahei"
                android:layout_alignParentBottom="true"
                android:maxLength="2" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/selectable_item_white_bg"
            android:layout_weight="1">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/consulting_asked_hint"
                android:id="@+id/detailEditText"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLength="600"
                android:gravity="top|left"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/selectable_item_white_bg"
            android:layout_marginTop="0dp"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"
                android:id="@+id/view4" />

            <View
                android:layout_height="match_parent"
                android:layout_width="1px"
                android:background="@color/tab_buttom_line"
                android:id="@+id/view5"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consulting_pay_money"
                android:fontFamily="Microsoft Yahei"
                android:id="@+id/textView3"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/moneyPayEdit"
                android:layout_toStartOf="@+id/moneyPayEdit"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/moneyPayEdit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:digits="1234567890"
                android:layout_toLeftOf="@+id/textView4"
                android:background="@drawable/bg_person_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_tongB_pay"
                android:fontFamily="Microsoft Yahei"
                android:id="@+id/textView4"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/moneyPayEdit"
                android:layout_alignTop="@+id/moneyPayEdit" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1"
                android:layout_toLeftOf="@+id/textView3"
                android:layout_toStartOf="@+id/textView3"
                android:gravity="center_horizontal">

                <com.yy.medical.activity.consulting.ConsultAddPicActivity
                    android:layout_width="44dp"
                    android:layout_height="52dp"
                    android:id="@+id/addPicActivity0"
                    android:layout_marginLeft="8dp">
                    </com.yy.medical.activity.consulting.ConsultAddPicActivity>

                <com.yy.medical.activity.consulting.ConsultAddPicActivity
                    android:layout_width="44dp"
                    android:layout_height="52dp"
                    android:id="@+id/addPicActivity1"
                    android:layout_marginLeft="8dp">
                    </com.yy.medical.activity.consulting.ConsultAddPicActivity>

                <com.yy.medical.activity.consulting.ConsultAddPicActivity
                    android:layout_width="44dp"
                    android:layout_height="52dp"
                    android:id="@+id/addPicActivity2"
                    android:layout_marginLeft="8dp">
                    </com.yy.medical.activity.consulting.ConsultAddPicActivity>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/selectable_item_white_bg"
            android:layout_marginTop="0dp"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/tab_buttom_line"/>

            <Button
                android:layout_centerInParent="true"
                android:id="@+id/askButton"
                android:layout_width="260dp"
                android:layout_height="42dp"
                android:text = "@string/consulting_ask"
                android:textColor="#ffffffff"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
</LinearLayout>
