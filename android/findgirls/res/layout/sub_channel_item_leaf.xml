<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sub_channel_item_height"
                android:paddingRight="14dp"
                android:paddingLeft="26dp"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants">

    <ImageView
            android:id="@+id/iv_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_lock"
            android:contentDescription="@string/dummy_content_desc"/>

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_channel_item_height"
            android:layout_toRightOf="@id/iv_locked"
            android:layout_toLeftOf="@id/tv_online_count"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="1"
            android:textSize="16sp"
            android:textColor="@color/sub_channel_name_normal"/>

    <TextView
            android:id="@+id/tv_online_count"
            android:layout_width="54sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="54dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_online_count"
            android:drawablePadding="2dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            />

</RelativeLayout>